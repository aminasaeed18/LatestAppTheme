<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundgreen"
    tools:context=".Green">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/buttonpinknew"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:layout_width="300dp"
        android:layout_height="550dp">
        <TextView
            android:id="@+id/text1"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textColor="#72DFC0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Green   Theme"
            />
        <LinearLayout
            android:layout_marginTop="253dp"
            android:background="@drawable/greenagain"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <TextView
                android:id="@+id/text2"
                android:textSize="25dp"
                android:textColor="#ffff"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Green and Pink is Melody....!!!!"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>